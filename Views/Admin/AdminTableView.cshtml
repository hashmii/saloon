@model List<SalonWebsite.Models.User>

@{
    ViewBag.Title = "AdminTableView";
    Layout = "~/Views/Shared/AdminView.cshtml";
    var grid = new WebGrid(source: Model, canPage: true, rowsPerPage: 10);
    grid.Pager(WebGridPagerModes.All);
}

<h2>AdminTableView</h2>

<style type="text/css">
    body
    {
        font-family: Arial;
        font-size: 10pt;
    }
    .GridPager a, .GridPager span
    {
        display: block;
        height: 15px;
        width: 15px;
        font-weight: bold;
        text-align: center;
        text-decoration: none;
    }
    .GridPager a
    {
        background-color: #f5f5f5;
        color: #969696;
        border: 1px solid #969696;
    }
    .GridPager span
    {
        background-color: #A1DCF2;
        color: #000;
        border: 1px solid #3AC0F2;
    }
    .Webgrid-table 
    {
        font-family: Arial;
        font-size: 10pt;
        width:100%;
        display:table;
        border-collapse:separate;
        border:solid 1px #3AC0F2;
        background-color:wheat;

    }
    .Webgrid-footer 
    {

    }
    .Webgrid-header
    {
        padding:3px 7px 2px;
    }
    .Webgrid-alternate 
    {
        background-color:#808080;
        padding:3px 7px 2px;
    }

</style>

<div id="content">
    @grid.GetHtml(
    tableStyle:"Webgrid-table",
    headerStyle:"Webgrid-header",
    footerStyle:"Webgrid-footer",
    alternatingRowStyle:"Webgrid-alternate",
    rowStyle:"",
    columns:grid.Columns(
    grid.Column(header:"Serial No", format:@<text><div>@(item.WebGrid.Rows.IndexOf(item))</div></text>),
    grid.Column(columnName:"UserName",header:"UserName"),
    grid.Column(columnName:"FirstName",header:"FirstName"),
    grid.Column(columnName:"LastName",header:"LastName"),
    grid.Column(columnName:"Email",format:@<text><a href="mailto:@item.Email">@item.Email</a></text>),        
    grid.Column(columnName:"Password",header:"Password")
    
            ))

</div>