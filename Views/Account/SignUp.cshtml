@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/shared/View2.cshtml";
}

<script>
function checkvalue() { 
    var first = document.getElementById('firstname');
    var last = document.getElementById('lastname').value;
    var uemail = document.getElementById('email').value;
    var uname = document.getElementById('username').value;
    var upassword = document.getElementById('password').value;
    if(first.value=="") {
        alert ('first Name empty');
        return false;
    }
    else if (!last.match(/\S/)) {
        alert('Last Name empty');
        return false;
    }
    else if (!uemail.match(/\S/)) {
        alert('Email empty');
        return false;
    }
    else if (!uname.match(/\S/)) {
        alert('UserName empty');
        return false;
    }
    else if (!upassword.match(/\S/)) {
        alert('Password empty');
        return false;
    }
    else {
        alert("correct input");
        return true;
    }
}
    </script>
<div class="col-md-4">
</div>

<div class="col-md-6 ">


       <form action="/Account/SignUp1" method="post"  class="form-horizontal" role="form" style="background-color:wheat">
        <br />
        <br />
        <br />
        <br />
      <div class="form-group">
        <label for="firstname" class="col-sm-2 control-label">First Name</label>
        <div class="col-sm-10">
          <input type="Text" class="form-control" id="firstname" autofocus="autofocus" name="first" placeholder="First Name">
        </div>
      </div>
      <div class="form-group">
        <label for="lastname" class="col-sm-2 control-label">Last Name</label>
        <div class="col-sm-10">
          <input type="Text" class="form-control" id="lastname" name="last" autofocus="autofocus" placeholder="Last Name">
        </div>
      </div>
      <div class="form-group">
        <label for="email" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
          <input type="email" class="form-control" id="email" name="email" autofocus="autofocus" placeholder="Email">
        </div>
      </div>
      <div class="form-group">
        <label for="username" class="col-sm-2 control-label">UserName</label>
        <div class="col-sm-10">
          <input type="Text" class="form-control" id="username" name="username" autofocus="autofocus" placeholder="Username">
        </div>
      </div>
      <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-10">
          <input type="password" class="form-control" id="password" name="password" autofocus="autofocus" placeholder="Password">
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <div class="checkbox">
            <label>
              <input type="checkbox"> Remember me
            </label>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default" onclick="checkvalue()">Sign in</button>
        </div>
      </div>
            <br />
            <br />
            <br />
    </form>
</div>
